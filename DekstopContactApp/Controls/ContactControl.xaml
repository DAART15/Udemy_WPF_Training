<UserControl x:Class="DekstopContactApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DekstopContactApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="455">
    <Grid Background="#FFDEE8F1">
        <StackPanel  Margin="5">
            <TextBlock x:Name="nameTextBlock"
                        Text="Name LastName"
                       FontSize="15"
                       FontWeight="Bold"/>
            <TextBlock x:Name="emailTextBlock"
                       Text="longemail@longemail.longemail" 
                       FontSize="15"
                       Foreground="DodgerBlue"/>
            <TextBlock x:Name="phoneTextBlock"
                       Text="+37023456789" 
                       FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
